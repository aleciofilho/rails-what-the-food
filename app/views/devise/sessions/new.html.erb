<div class="login-page" style="background-image: url(<%= image_path 'vegetais.jpg' %>)">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-sm-4">
        <div class="form-login">
          <h2>Log in</h2>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          label: "Email",
                          input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                          required: false,
                          label: "Password",
                          input_html: { autocomplete: "current-password" } %>
            </div>
            <div class="mt-2 mb-2">
              <%= f.input :remember_me, label: "Remember me", as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Log in", class: "btn-login" %>
            </div>
          <% end %>

          <div class="p-layout-form">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
