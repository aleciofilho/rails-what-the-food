<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">

    <div class="logo-list d-flex align-items-center">
      <div class="logo-nav-bar">
        <%= link_to root_path, class: "navbar-brand" do %>
          <%= image_tag "logo10.png" %>
        <% end %>
      </div>

      <div class="list-nav-bar ml-3">
        <ul class="navbar-nav me-auto">
            <li class="nav-item btn-navbar active">
              <%= link_to "Home", root_path, class: "nav-link" %>
            </li>
            <li class="nav-item btn-navbar">
              <%= link_to "About us", "#", class: "nav-link" %>
            </li>
            <li class="nav-item btn-navbar">
              <%= link_to "Contact", "#", class: "nav-link" %>
            </li>
            <li class="nav-item btn-navbar">
              <%= link_to "Recipes", pages_path, class: "nav-link" %>
            </li>
        </ul>
      </div>

    </div>




    <div class="collapse navbar-collapse" id="navbarSupportedContent">

          <li class="nav-item dropdown">
            <% if user_signed_in? %>
              <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Profile", user_path(current_user), class: "dropdown-item" %>
              <%= link_to "Recipes", pages_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
          <% else %>
          <li class="nav-item login-navbar">
            <%= link_to "Login", new_user_session_path, class: "nav-link-login" %>
          </li>
          <%= image_tag "avatar.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
