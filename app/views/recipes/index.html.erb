<div class="container">
  <h1>Index of recipe</h1>

  <%= form_tag recipes_path, method: :get, class: "d-flex" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a recipe"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>

  <div class="container">
    <div class="row justify-content-center">
      <% @recipes.each do |recipe| %>
        <div class="card col-4 col-sm-8 m-1" style="width: 18rem;">
          <%= image_tag "#{recipe.url}", class: "card-img-top" %>
          <div class="card-body">
            <h5 class="card-title"><%= recipe.name %></h5>
            <p class="card-text"><%= recipe.description %></p>
            <div class="d-flex">
              <i class="fas fa-clock"></i>
              <p class="card-text"><%= recipe.prep_time %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
<h1>Index of recipe</h1>

<div class="container" data-controller="display-recipes">

  <form data-action="submit->display-recipes#listRecipes">
    <input type="text" placeholder="Enter a ingredient" data-display-recipes-target="input">
    <input type="submit" value="Submit" class="btn btn-primary">
  </form>
  <div class="card recipes" data-display-recipes-target="display">

  </div>
</div>
